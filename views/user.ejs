    <body>
        <nav>
            <ul>
                <li><img src="https://www.freeiconspng.com/uploads/high-resolution-fidget-spinner-black-image-17.png" width="50" alt="High Resolution Fidget Spinner Black Image"  class="fidget-spinner" /></a></li>
                <li>
                    <% if (user) { %>
                        <a href="/logout">Log Out</a>
                        <% } else { %>
                        <a href="/auth/google">Login with Google</a>
                        <% } %>
                </li>
                <li>
                    <a href="/posts">Main</a>
                </li>
                <li>
                    <a href="posts/new">Make a Post</a>
                </li>
            </ul>
        </nav>
 

        <h1>Fidget User Page</h1>
        <h2> <%= user.name %> </h2> <!-- Shows logged in user's name -->


        <p>This user has made <%= user.posts.length %> posts! </p>
        <% if (user.posts.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Posts</th>
                    </tr>
                </thead>
                <tbody>
                    <% user.posts.forEach(function(c) { %>
                        <tr>
                            <td><%= c.posts %></td>
                        </tr>
                   <% }); %>
                </tbody>
            </table>
       <% } else { %>

        <h4>No Posts Yet!</h4>
       <% } %>

      
    </body>
</html>

